---
const { color, class: className} = Astro.props;
---

<span class={`${color} ${className}`}>
    <slot/>
</span>

<style>

    span {
        padding: 0.2rem 0.8rem;
        outline: none;
        text-decoration: none!important;
        border-radius: 9999px;

        box-shadow: rgb(255, 255, 255) 0px 0px 0px 0px inset, rgba(79, 70, 229, 0.1) 0px 0px 0px 1px inset, rgba(0, 0, 0, 0) 0px 0px 0px 0px;
        width: fit-content;
        font-size: 14px;
        font-weight: 600;
        -webkit-font-smoothing: antialiased;
    }

    .purple {
        --badget-color: rgb(112, 70, 229);
        color: var(--badget-color);
        border: 1px var(--badget-color) solid;
        background-color: rgb(165, 70, 229, 0.1);
    }

    .green {
        --badget-color: rgb(63, 185, 80);
        color: var(--badget-color);
        border: 1px var(--badget-color) solid;
        background-color: rgb(63, 185, 80, 0.1);        
    }
</style>